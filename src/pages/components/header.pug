- const user = locals.user ? locals.user : data.user
header(class="header")
  div(class="header_logo" title="KrisEmm")
    a(class="header_logo_image" href="index.html")
      img(alt="logo_image" src="./assets/logo.svg")
    div(class="header_logo_lines-vertical")
      div(class="header_logo_lines-vertical-image")
    div(class="header_logo_line-horizontal")
      img(alt="logo_letters" src="./assets/illustrations/line-horizontal.svg")
    a(class="header_logo_text" href="index.html")
      p(class="notranslate") hi,
      p(class="notranslate") there!
  nav(class="header_nav")
    a(class="header_nav_link header_nav_link-phone" title="Contact me!" href="contact.html")
      img(alt="phone-icon" src="./assets/icons/phone-first.svg")
      p= user.phone
    a(class="header_nav_link header_nav_link-email" title="Contact me!" href="contact.html")
      img(alt="email-icon" src="./assets/icons/email-first.svg")
      p= user.email
    a(class="header_nav_link header_nav_link-github" title="Github" href=user.social.github target="_blank")
      img(alt="menu-icon" src="./assets/icons/github-first.svg")
    a(class="header_nav_link header_nav_link-linkedin" title="Linkedin" href=user.social.linkedin target="_blank")
      img(alt="linkedin-icon" src="./assets/icons/linkedin-first.svg")
    a(class="header_nav_link header_nav_link-twitter" title="Twitter" href=user.social.twitter target="_blank")
      img(alt="twitter-icon" src="./assets/icons/twitter-first.svg")
    div(id="header_menu_button" class="header_nav_menu-icon")
      img(alt="menu-icon" src="./assets/icons/menu.svg")